<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>

    <ToolCommandName>tot</ToolCommandName>
    <PackAsTool>true</PackAsTool>

    <Title>A simple command line tool to help you keep track of things.</Title> 
    <Description>tot lets you record time-stamped events. Use it for personal time tracking or automating the ingestion of time series data.</Description>
    <Authors>jonsequitur</Authors>
    <PackageTags>time-series time-tracking productivity</PackageTags>
    <RepositoryUrl>https://github.com/jonsequitur/tot</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="humanizer" Version="2.8.26" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20478.1" />
    <PackageReference Include="TimeSpanParserUtil" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\totlib\totlib.csproj" />
  </ItemGroup>

</Project>
