<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>

    <ToolCommandName>tot</ToolCommandName>
    <PackAsTool>true</PackAsTool>

    <Description>A simple command line tool to help you keep track of things</Description>
    <Authors>jonsequitur</Authors>
    <PackageTags>time-series time-tracking productivity data</PackageTags>
    <RepositoryUrl>https://github.com/jonsequitur/tot</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="humanizer" Version="2.13.14" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta2.21617.1" />
    <PackageReference Include="TimeSpanParserUtil" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\totlib\totlib.csproj" />
  </ItemGroup>

</Project>
